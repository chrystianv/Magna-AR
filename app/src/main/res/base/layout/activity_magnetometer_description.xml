<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <TextView
            android:text="@string/magnetometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingBottom="20dip" />

        <TextView
            android:text="@string/sensor_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="#388E3C" />

        <TextView
            android:text="@string/sensor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:id="@+id/sensorName"
            android:textStyle="italic"
            />

        <TextView
            android:text="@string/vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dip"
            android:id="@+id/vendor"


            android:textStyle="italic"

            />

        <TextView
            android:text="@string/description"
            android:paddingTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#388E3C"
            />

        <TextView
            android:text="@string/info_magnetometer_1"
            android:layout_width="match_parent"
            android:textIsSelectable="true"

            android:layout_height="wrap_content"
            android:paddingTop="20dip" />

        <TextView
            android:text="@string/operating_principle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:textColor="#388E3C"
            android:textSize="20sp" />

        <TextView
            android:text="@string/magnetometer_info_2"
            android:layout_width="match_parent"
            android:textIsSelectable="true"

            android:layout_height="wrap_content"
            android:paddingTop="20dip"/>

        <TextView
            android:text="@string/additional_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="20dip"
            android:textColor="#388E3C" />


        <TextView
            android:text="How a Smartphone Knows Up from Down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:textColorLink="#1976D2"

            android:id="@+id/textView16" />




    </LinearLayout>
</ScrollView>